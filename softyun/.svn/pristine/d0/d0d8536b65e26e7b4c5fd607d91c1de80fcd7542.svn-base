/* header */

.header {
	width: 100%;
	height: 75px;
	background-color: #3C404D;
	border-bottom: 1px solid #1779BE;
	overflow: hidden;
}

.header .nav {
	width: 960px;
	margin: 0 auto;
	height: 75px;
}

.header ul li a {
	display: block;
	float: left;
	color: #eee;
	padding: 0 9px;
	font-size: 20px;
	line-height: 75px;
	height: 75px;
	position: relative;
}

.header .logo a {
	width: 80px;
	font-size: 40px;
}

.nav li a.active, 
.nav li:hover a {
	background: -moz-linear-gradient(center top , #343846 0px, #181B23 100%) repeat scroll 0 0 rgba(0, 0, 0, 0);
	color: #9EDB48;
}

.Menu {
	float: right;
	display: inline;
}

.Menu li {
	float: right;
	display: inline;
}

/* end of header */